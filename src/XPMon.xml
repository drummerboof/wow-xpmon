<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ../../FrameXML/UI.xsd">
    <Script File="XPMon.lua"/>

    <Frame name="XPMonTabAreaTemplate" virtual="true" hidden="true" inherits="InsetFrameTemplate">
        <Anchors>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT"/>
        </Anchors>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
            <TileSize val="16" />
            <Color r="0" g="0" b="0" a="1" />
        </Backdrop>
    </Frame>

    <Frame name="XPMonFrame"
           toplevel="true"
           frameStrata="DIALOG"
           movable="true"
           enableMouse="true"
           inherits="ButtonFrameTemplate"
           hidden="false"
           parent="UIParent">

        <Size>
            <AbsDimension x="450" y="550"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Layers>
            <Layer>
                <Texture file="Interface\QuestFrame\UI-QuestLog-BookIcon">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="-8" y="10" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="XPMonFrameTitleText" inherits="GameFontNormal" text="XPMon">
                    <Size>
                        <AbsDimension x="300" y="14"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-5"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Frame name="XPMonFrameContent" hidden="false" parent="XPMonFrameInset" toplevel="true" setAllPoints="true">

                <Anchors>
                    <Anchor point="TOP" y="-10" />
                    <Anchor point="RIGHT" x="-10" />
                    <Anchor point="BOTTOM" y="10" />
                    <Anchor point="LEFT" x="10" />
                </Anchors>

                <Frames>

                    <Button name="XPMonFrameSelectLevel" inherits="UIDropDownMenuTemplate" parent="XPMonFrame">
                        <Scripts>
                            <OnLoad>
                                UIDropDownMenu_Initialize(self, function ()
                                XPMon:UI_InitLevelSelect(self)
                                end);
                            </OnLoad>
                        </Scripts>
                        <Size x="150" y="32"/>
                        <Anchors>
                            <Anchor point="TOPRIGHT" y="-28" x="-10"/>
                        </Anchors>
                    </Button>

                    <Frame name="XPMonFrameSummary">
                        <Anchors>
                            <Anchor point="TOPLEFT"></Anchor>
                            <Anchor point="TOPRIGHT"></Anchor>
                        </Anchors>
                        <Size y="150" />
                        <Frames>
                            <Frame name="XPMonFrameSummaryTitle" hidden="false">
                                <Anchors>
                                    <Anchor point="TOPLEFT"></Anchor>
                                    <Anchor point="TOPRIGHT"></Anchor>
                                </Anchors>
                                <Size y="20" />
                                <Layers>
                                    <Layer>
                                        <FontString name="XPMonTitleText" inherits="GameFontNormalLarge" text="XP Details for Level">
                                            <Anchors>
                                                <Anchor point="TOPLEFT" />
                                            </Anchors>
                                        </FontString>
                                        <FontString name="XPMonTitleTextLevel" inherits="GameFontNormalLarge" text="--">
                                            <Anchors>
                                                <Anchor point="TOPLEFT" relativeTo="XPMonTitleText" relativePoint="TOPRIGHT" x="5" />
                                            </Anchors>
                                        </FontString>
                                    </Layer>
                                </Layers>
                            </Frame>
                            <Frame name="XPMonFrameSummaryTableLevel" hidden="false">
                                <Anchors>
                                    <Anchor point="TOPLEFT" y="-30" x="10"></Anchor>
                                </Anchors>
                                <Size x="190" y="110" />
                                <Frames>

                                </Frames>
                            </Frame>

                        </Frames>
                    </Frame>

                    <Frame name="XPMonFrameTabButtons" frameLevel="100">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="XPMonFrameSummary" relativePoint="BOTTOMLEFT" />
                            <Anchor point="TOPRIGHT" relativeTo="XPMonFrameSummary" />
                        </Anchors>
                        <Size y="32" />
                        <Frames>
                            <Button name="$parentTab1" inherits="TabButtonTemplate" id="1" text="Quests">
                                <Anchors>
                                    <Anchor point="LEFT" relativePoint="LEFT" x="10" />
                                </Anchors>
                                <Scripts>
                                    <OnClick>
                                        XPMon:UI_OnTabClick(XPMonFrameTabButtons, self:GetID())
                                    </OnClick>
                                </Scripts>
                            </Button>
                            <Button name="$parentTab2" inherits="TabButtonTemplate" id="2" text="Kills">
                                <Anchors>
                                    <Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT" />
                                </Anchors>
                                <Scripts>
                                    <OnClick>
                                        XPMon:UI_OnTabClick(XPMonFrameTabButtons, self:GetID())
                                    </OnClick>
                                </Scripts>
                            </Button>
                        </Frames>
                        <Scripts>
                            <OnLoad>
                                PanelTemplates_SetNumTabs(XPMonFrameTabButtons, 2)
                            </OnLoad>
                        </Scripts>
                    </Frame>

                    <Frame name="XPMonFrameTabs" frameLevel="90">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="XPMonFrameTabButtons" relativePoint="BOTTOMLEFT" />
                            <Anchor point="BOTTOMRIGHT" relativeTo="XPMonFrameContent" />
                        </Anchors>

                        <Frames>
                            <Frame name="XPMonFrameTabContent1" inherits="XPMonTabAreaTemplate">
                                <Layers>
                                    <Layer level="ARTWORK">
                                        <FontString inherits="GameFontNormal" text="Quests Frame">
                                            <Anchors>
                                                <Anchor point="TOPLEFT" relativeTo="$parent" x="10" y="-10" />
                                            </Anchors>
                                        </FontString>
                                    </Layer>
                                </Layers>
                                <Frames>
                                </Frames>
                            </Frame>
                            <Frame name="XPMonFrameTabContent2" inherits="XPMonTabAreaTemplate">
                                <Layers>
                                    <Layer level="ARTWORK">
                                        <FontString inherits="GameFontNormal" text="Kills Frame">
                                            <Anchors>
                                                <Anchor point="TOPLEFT" relativeTo="$parent" x="10" y="-10" />
                                            </Anchors>
                                        </FontString>
                                    </Layer>
                                </Layers>
                            </Frame>
                        </Frames>
                        <Scripts>
                            <OnLoad>
                                XPMon:UI_OnTabClick(XPMonFrameTabButtons, 1)
                            </OnLoad>
                        </Scripts>
                    </Frame>
                </Frames>
            </Frame>
        </Frames>

        <Scripts>
            <OnLoad>
                XPMon:onLoad(self)
                self:RegisterForDrag("LeftButton")
            </OnLoad>
            <OnEvent>
                XPMon:onEvent(self, event, ...)
            </OnEvent>
            <OnDragStart>
                if(button == "LeftButton") then
                self:StartMoving()
                end
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
            <OnShow>
                XPMon:UI_OnShow(self)
            </OnShow>
        </Scripts>
    </Frame>
</Ui>