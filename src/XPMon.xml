<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ../../FrameXML/UI.xsd">
    <Script File="XPMon.lua"/>

    <Frame name="XPMonFrame"
           toplevel="true"
           movable="false"
           enableMouse="false"
           hidden="true"
           frameStrata="MEDIUM"
           parent="UIParent">

        <Scripts>
            <OnLoad>
                XPMon:onLoad(self)
            </OnLoad>
            <OnEvent>
                XPMon:onEvent(self, event, ...)
            </OnEvent>
        </Scripts>
    </Frame>
</Ui>